<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= profileUser.username %> | راية الفرسان</title>
  <meta name="description" content="<%= typeof pageDescription !== 'undefined' ? pageDescription : '' %>">
  <meta property="og:title" content="<%= profileUser.username %>">
  <meta property="og:type" content="profile">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Kufi+Arabic:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <main class="container">
    <div class="profile-header">
      <% if (profileUser.avatar_url) { %>
        <img src="<%= profileUser.avatar_url %>" alt="صورة الملف الشخصي" class="profile-avatar-img">
      <% } else { %>
        <div class="profile-avatar"><%= profileUser.username.charAt(0) %></div>
      <% } %>
      <div class="profile-info">
        <h1><%= profileUser.username %></h1>
        <span class="profile-date">عضو منذ <%= new Date(profileUser.created_at).toLocaleDateString('ar-EG') %></span>
        <% if (profileUser.email_verified) { %>
          <span class="badge badge-verified">بريد موثق</span>
        <% } %>
        <% if (profileUser.bio) { %>
          <p style="color: #ccc; font-size: 0.9rem; margin-top: 0.5rem;"><%= profileUser.bio %></p>
        <% } %>
        <div class="karma-display">
          <span class="karma-item">&#9650; <%= postKarma %> نقاط منشورات</span>
          <span class="karma-item">&#128172; <%= commentKarma %> نقاط تعليقات</span>
        </div>
      </div>
    </div>

    <div class="profile-content">
      <div class="profile-main">
        <h2 class="section-title">المنشورات (<%= posts.length %>)</h2>
        <% if (posts.length === 0) { %>
          <p class="empty-state">لا توجد منشورات.</p>
        <% } %>
        <% posts.forEach(post => { %>
          <div class="post-card compact">
            <div class="post-content">
              <div class="post-meta">
                <a href="/c/<%= post.community_id %>" class="community-tag"><%= post.community_name %></a>
                <time class="post-time" datetime="<%= post.created_at %>"><%= timeAgo(post.created_at) %></time>
              </div>
              <% if (post.post_type === 'link' && post.link_url) { %>
                <a href="<%= post.link_url %>" class="post-title" target="_blank" rel="noopener">&#128279; <%= post.title %></a>
              <% } else { %>
                <a href="/p/<%= post.id %>" class="post-title"><%= post.title %></a>
              <% } %>
              <div class="post-stats">
                <span>&#9650; <%= post.score %></span>
                <span>&#128172; <%= post.comment_count %></span>
              </div>
            </div>
          </div>
        <% }) %>

        <h2 class="section-title" style="margin-top: 2rem;">آخر التعليقات</h2>
        <% if (comments.length === 0) { %>
          <p class="empty-state">لا توجد تعليقات.</p>
        <% } %>
        <% comments.forEach(c => { %>
          <div class="comment-preview">
            <a href="/p/<%= c.post_id %>#comment-<%= c.id %>" class="comment-on">على: <%= c.post_title %></a>
            <p><%= c.body.substring(0, 150) %></p>
            <time class="comment-time" datetime="<%= c.created_at %>"><%= timeAgo(c.created_at) %></time>
          </div>
        <% }) %>
      </div>

      <aside class="sidebar">
        <div class="sidebar-card">
          <h3 class="sidebar-title">المجتمعات المتابَعة</h3>
          <% if (followedCommunities.length === 0) { %>
            <p class="empty-state">لا يتابع أي مجتمع.</p>
          <% } %>
          <ul class="community-list">
            <% followedCommunities.forEach(c => { %>
              <li><a href="/c/<%= c.id %>"><%= c.icon %> <%= c.name %></a></li>
            <% }) %>
          </ul>
        </div>
      </aside>
    </div>
  </main>
  <script src="/app.js"></script>
</body>
</html>
